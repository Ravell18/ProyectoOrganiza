@page

@model RegistroEModels
@{

}
<link rel="stylesheet" href="~/css/StyleSheet.css">

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
        </div>

    </div>
</div>
<div class="container">

    <form id="signup" class="mt-3" method="post">

        <div class="header">
            <br>
            <h3>Crear escuela</h3>
            <p>Bienvenido</p>

        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="sep"></div>


            <div class="inputs">
                @Html.EditorFor(model => model.Escuela.NombreE, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre de la escuela", @autofocus_autocomplete = "off", @type = "text" } })

                @Html.EditorFor(model => model.Escuela.Colegiatura, new { htmlAttributes = new { @class = "form-control", @placeholder = "Costo de colegiatura", @autofocus_autocomplete = "off", @type = "text" } })

                @Html.DropDownListFor(m => m.Escuela.ModoP,
                  new SelectList(Enum.GetValues(typeof(RegistroEModels.Modopago))),
                  "Selecciona El modo de pago")
                <div class="checkboxy">
                    <input name="cecky" id="checky" value="1" type="checkbox" autocomplete="off" /><label class="terms">Acepto los terminos de uso</label>
                </div>

                <button id="submit" class="btn btn-success btn-block" type="submit">Registrar</button>
            </div>
        }

    </form>

</div>
