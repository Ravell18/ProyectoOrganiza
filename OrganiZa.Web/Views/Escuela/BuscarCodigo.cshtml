@model BuscarModels
@{
}

<h1>Buscar Codigo de escuela</h1>
<br />
<br />
<br />
<form asp-controller="Escuela" asp-action="BuscarCodigo" method="get">
    <div class="row">
        <div class="col-md-4">
            @Html.EditorFor(model => model.Busqueda, new { htmlAttributes = new { @class = "form-control", @placeholder = "Busqueda por Nombre de la escuela", @autofocus_autocomplete = "off", @type = "text" } })
        </div>
        <div class="col-md-4">
            <button class="btn btn-outline-secondary" type="submit">Buscar</button>
        </div>
    </div>

</form>
<form method="post">


    <table class="table">
        <thead>
            <tr>
                <th>
                    Codigo de la escuela
                </th>
                <th>
                    Nombre
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Escuela)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreE)
                    </td>


                </tr>
            }
        </tbody>
    </table>
</form>
