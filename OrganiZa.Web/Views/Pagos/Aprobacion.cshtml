
@model AprobacionModels
@{

}


<form class="mt-3" method="post">
    <div class="row">
        <div class="col-md-12">

            <input hidden asp-for="@Model.pagos.Id" />
            <input hidden asp-for="@Model.pagos.TutorId" />
            <input hidden asp-for="@Model.pagos.Alumno" />
            <input hidden asp-for="@Model.pagos.Colegiatura" />
            <input hidden asp-for="@Model.pagos.Fecha" />
            <input hidden asp-for="@Model.pagos.Voucher" />
            <br>
            <br>
        </div>
    </div>
    <div class="row">

        <div class="col-md-12">
            <div class="form-group">
                <label>Nombre del Tutor</label>
                <input type="text" asp-for="pagos.NombreT" class="form-control">
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label>Ficha de pago</label>
                <input type="text" asp-for="pagos.Fichapago" class="form-control">
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <a class="btn-modal-img">Editar</a>
            </div>
        </div>
        <div class="form-group col-md-12">
            <label for="inputState">Cambiar Estatus</label>
            <select asp-for="@Model.pagos.Statusdepago" id="inputState" class="form-control">
                <option selected value="">-Seleccione una Opcion</option>
                <option>Aprobado</option>
                <option>No Aprobado</option>
            </select>
            @Html.ValidationMessageFor(model => model.pagos.Statusdepago, "", new { @class = "text-danger" })

        </div>
        <div class="col-md-12 text-center">
            <div class="form-group">
                <button type="submit" class="btn btn-success m-3">Guardar Cambios</button>
            </div>
        </div>
    </div>
</form>

@section Modals{
    <div class="modal fade" tabindex="-1" role="dialog" id="Dialog-Img">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Visualizacion</h4>
                </div>
                <div class="modal-body text-center">
                    <img class="img-fluid" src="@Model.ImageSource(Model.pagos.Voucher)" alt="Image" style="max-height:240px; max-width:480px;" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
}