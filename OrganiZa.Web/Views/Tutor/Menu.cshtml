                        <a asp-area="" asp-controller="Pagos" asp-action="Historial" class="btn btn-primary">Ver</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top img-thumbnail imgThumbnail" src="~/images/Calendario.jpeg"
                     alt="" asp-append-version="true">
