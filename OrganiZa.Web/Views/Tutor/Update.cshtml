@model OrganiZa.Domain.DTOs.TutorRequestDto
@{
   

}
<form class="mt-3" method="post">
@using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <br>
            <br>
        </div>
    </div>
    <div class="row">

        <div class="col-md-12">
            <div class="form-group">
                <label>Nombre del Tutor</label>
                @Html.EditorFor(model => model.NombreT, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label>Nombre del Alumno</label>
                @Html.EditorFor(model => model.Alumno, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label>Tipo de cuenta</label>
                @Html.EditorFor(model => model.Rolusuario, new { htmlAttributes = new { @class = "form-control", disabled = true } })
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <a asp-controller="Home" asp-action="Home" class="btn btn-primary">Volver</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" value="Actualizar"class="btn btn-success" >
            </div>
        </div>
    </div>
}
</form>


